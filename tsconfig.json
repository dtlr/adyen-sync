{
  "compilerOptions": {
    "declaration": true,
    "composite": false,
    "target": "esnext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "zod", "vite/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "paths": {
      "@db": ["./src/db/index.js"],
      "@db/*": ["./src/db/*"],
      "@core/*": ["./src/core/*"],
      "@eapis/*": ["./src/eapis/*"],
      "@hooks/*": ["./src/hooks/*"],
      "types": ["./src/types/index.js"],
      "types/*": ["./src/types/*"],
      "@commands/*": ["./src/commands/*"],
      "@web": ["./src/web/index.js"],
      "@web/*": ["./src/web/*"],
      "@util": ["./src/util/index.js"],
      "@util/*": ["./src/util/*"],
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "scripts", "configs"]
}
